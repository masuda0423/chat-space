.side-bar
  .side-bar__side-header
    .side-bar__side-header__top-items
      %p.side-bar__side-header__top-items__name
        = current_user.name
        %ul.side-bar__side-header__top-items__icons
          %li.side-bar__side-header__top-items__icons__edit
            = link_to new_group_path do
              = icon('fas', 'edit')
          %li.side-bar__side-header__top-items__icons__config
            = link_to edit_user_path(current_user) do
              = icon('fas', 'cog')
          
  .side-bar__groups
    - current_user.groups.each do |group|
      .side-bar__groups__contents
        = link_to "#" do
          .side-bar__groups__contents__name
            = group.name
